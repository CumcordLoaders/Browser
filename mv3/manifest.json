{
    "version": "1.2",
	
	"permissions": ["debugger"],
    "manifest_version": 3,
    "host_permissions": [
        "https://*/*"
    ],

    "background": {
      "service_worker": "src/worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.discord.com/*",
                "*://discord.com/*"
            ],
            "js": ["src/content.js"],
            "run_at": "document_end"
        }
    ],
    "externally_connectable": {
        "matches": [
            "*://*.discord.com/*",
            "*://discord.com/*"
        ]
    }
}